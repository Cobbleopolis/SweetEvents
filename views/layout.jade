doctype html
html
    head
        title= title
        link(rel="shortcut icon" href="//static.sweeteventsjc.com/images/icon.jpg")
        script(type='text/javascript', src='//static.sweeteventsjc.com/javascripts/jquery-1.11.3.min.js')
        //link(href='http://fonts.googleapis.com/css?family=Cookie' rel='stylesheet' type='text/css')
        //link(href='http://fonts.googleapis.com/css?family=Ubuntu&subset=cyrillic,latin' rel='stylesheet' type='text/css')
        link(href='http://fonts.googleapis.com/css?family=Courgette' rel='stylesheet' type='text/css')

        link(rel='stylesheet', href='//static.sweeteventsjc.com/stylesheets/style.css')
        script(type='text/javascript', src='//static.sweeteventsjc.com/javascripts/layout.js')
        block head
    body
        div#page
            div#navDiv
                ul#nav
                    for page in pages
                        li
                            a.pageLink(href!= page[1])
                                div(id!= active === page[0] ? "active" : "")= page[0]
            div#content
                if active !== "Home"
                    p#title!=title
                if secondNav
                    div#secondNav
                        ul
                            each val in secondNav
                                a(href!="#" + val)
                                    li.secondNavListItem!= val
                    div#display
                block content